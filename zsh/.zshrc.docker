alias dockershell="docker run --rm -i -t --entrypoint=/bin/bash"

function dockershellhere() {
    # dirname=${PWD##*/}
    dirname=mnt
    docker run --rm -it \
        --entrypoint=/bin/bash \
        -v `pwd`:"/home/user/${dirname}" \
        -w "/home/user/${dirname}" \
        --net=none \
        --cap-drop=ALL \
        --security-opt="no-new-privileges=true" \
        "$@"
}
